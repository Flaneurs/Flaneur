<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvInfoWindowAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="@string/info_address_placeholder"
        android:textColor="@color/primary"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:background="@color/primary"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:text="@string/info_views_text"
            android:textColor="@color/secondary_text" />

        <TextView
            android:id="@+id/tvInfoWindowViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:textColor="@color/secondary_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:text="@string/info_upvotes_text"
            android:textColor="@color/secondary_text" />

        <TextView
            android:id="@+id/tvInfoWindowUpvotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text" />

    </LinearLayout>
</LinearLayout>
